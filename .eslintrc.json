{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jasmine": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "extends": "eslint:recommended",
  "plugins": [
    "immutable"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2, {
      "SwitchCase": 1
    }],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "never"
    ],
    "comma-dangle": [2, "always-multiline"],
    "no-console": 1,
    "no-unused-vars": 1,
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "immutable/no-let": 2,
    "immutable/no-this": 2,
    "immutable/no-mutation": 2
  }
}
